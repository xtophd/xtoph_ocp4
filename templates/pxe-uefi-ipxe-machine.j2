#!ipxe

echo
echo
echo Red Hat CoreOS {{ xtoph_ocp4.ocp.version }} [{{ t_name }}]

set boot-path http://{{ t_addr }}:{{ t_port }}/assets/

echo
echo Loading initird: {{ t_initramfs }}
sleep 1

initrd --name initrd.img ${boot-path}/{{ t_initramfs }}

echo
echo Loading kernel: {{ t_kernel }}
sleep 1

kernel --name vmlinuz ${boot-path}/{{ t_kernel }}

echo Starting Installation
sleep 1

boot vmlinuz boot=live initrd=initrd.img ip={{ t_network }} {% if t_bond != "" %}bond={{ t_bond }}{% endif %} rd.neednet=1 console=tty0 usb-storage.delay_use={{ t_usbdelay }} coreos.inst=yes coreos.inst.install_dev={{ t_storage }} coreos.inst.image_url=http://{{ t_addr }}:{{ t_port }}/assets/{{ t_bios }} coreos.inst.insecure=yes {% if t_rootfs != "" %}coreos.live.rootfs_url=http://{{ t_addr }}:{{ t_port }}/assets/{{ t_rootfs }}{% endif %} coreos.inst.ignition_url=http://{{ t_addr}}:{{ t_port }}/ignition?mac={{ t_dash_mac }}

