apiVersion: v1
baseDomain: {{ p_domain }}
compute:
- hyperthreading: Enabled
  name: worker
  replicas: 0
controlPlane:
  hyperthreading: Enabled
  name: master
  replicas: 3
metadata:
  name: {{ p_clusterName }}
networking:
  clusterNetwork:
  - cidr: {{ xtoph_ocp4.ocp.clusternetwork_cidr }}
    hostPrefix: {{ xtoph_ocp4.ocp.clusternetwork_cidr_hostprefix }}
  networkType: OpenShiftSDN
  serviceNetwork:
  - 172.30.0.0/16
platform:
  vsphere:
    vcenter: {{ p_vcenterServer }}
    username: {{ p_vcenterUser }}
    password: {{ p_vcenterPwd }}
    datacenter: {{ p_vcenterDC }}
    defaultDatastore: {{ p_vcenterDS }}
pullSecret: {{ p_pullSecret }}
sshKey: {{ p_sshKey }}
