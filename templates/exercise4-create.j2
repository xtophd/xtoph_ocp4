##


ROUTE=`oc get route --no-headers | awk '{ print $2 }'`

echo ""
echo "## - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
echo "## You can validate the results by running..."
echo "##"
echo "##    curl -k http://$ROUTE"
echo "##"

